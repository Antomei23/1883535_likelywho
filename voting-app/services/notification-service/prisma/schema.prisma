generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // schema = "notifications"  // opzionale, se vuoi usare uno schema specifico
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String   // NEW_QUESTION | VOTE_RESULT | ...
  payload   Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, read])
}
