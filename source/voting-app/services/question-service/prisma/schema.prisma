generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // schema = "questions"  <-- commento opzionale sopra la proprietÃ 
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Question {
  id        String   @id @default(uuid())
  groupId   String
  text      String
  createdAt DateTime @default(now())
  expiresAt DateTime
  closed    Boolean  @default(false)

  @@index([groupId])
  @@index([expiresAt])
}
